@{
    ViewData["Title"] = "Service Congfigs";
}

@section Header{
    <link href="~/assets/extensions/toastify-js/src/toastify.css" rel="stylesheet" />
    <link href="~/assets/extensions/datatables.net-bs5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/assets/extensions/datatables.net-bs5/css/select.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/assets/extensions/datatables.net-bs5/css/jquery.datatables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
}

<div class="page">
    <!--Page Title-->
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last mb-2">
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first  d-flex justify-content-end">
                <nav aria-label="breadcrumb"
                     class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            @ViewData["Title"]
                        </li>
                        <li class="breadcrumb-item active">
                            Service Config Management
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <!--Page Content-->
    <div class="page-content">
        <section class="section">
            <div class="card card-page">
                <div class="card-header">
                    <div class="d-flex btn-header gap-1">
                        <input type="text" class="form-control" id="search" placeholder="Search" />

                    </div>
                </div>
                <div class="card-body">
                    <table id="serviceConfigsDatatable" class="table table-bordered dt-responsive nowrap" width="100%" cellspacing="0" style="text-align: center">
                        <thead>
                            <tr>
                                <th>Service Config Name</th>
                                <th>Service Config Value</th>
                                <th>Description</th>
                                <th>Note</th>
                                <th data-orderable="false">
                                    Action
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>

<!--Modal Update Service Config-->
<div class="modal fade text-left" data-bs-backdrop="static" data-bs-keyboard="false" id="modal-edit" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable" role="document">
        <form class="form" id="form-edit-service-config">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Edit Service Config </h4>
                    <button type="button" class="close" id="cancel-edit-service-config" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <div class="modal-body" style="width: 800px;">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mandatory">
                                <label for="service-config-name" class="form-label">Service Config Name</label>
                                <input type="text" id="service-config-name" disabled autofocus name="service-config-name" class="form-control form-control-lg" placeholder="Service Config Name" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mandatory">
                                <label for="value" class="form-label">Service Config Value</label>
                                <input type="text" id="value" name="value" class="form-control form-control-lg" placeholder="Service Config Value" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="description" class="form-label">Description</label>
                                <textarea type="text" id="description" name="description" class="form-control form-control-lg wrap-content" placeholder="Description"
                                          style="display: block; overflow: hidden auto; resize: none; height: 43px;" ></textarea>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="note" class="form-label">Note</label>
                                <textarea type="text" id="note" name="note" class="form-control form-control-lg wrap-content" placeholder="Note"
                                          style="display: block; overflow: hidden auto; resize: none; height: 43px;" ></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="submit-edit-service-config" class="btn btn-primary">Save</button>
                    <button type="button" id="cancel-edit-service-config" class="btn btn-secondary">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>


<!--Modal Information Service Config -->
<div class="modal fade text-left" data-bs-backdrop="static" data-bs-keyboard="false" id="modal-information" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable" role="document">
        <form class="form" id="form-information-service-config">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Information Service Config</h4>
                    <button type="button" data-bs-dismiss="modal" class="close" aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <div class="modal-body" style="width: 800px;">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mandatory">
                                <label for="service-config-name" class="form-label">Service Config Name</label>
                                <label id="service-config-name" name="service-config-name" class="form-control form-control-lg"></label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mandatory">
                                <label for="value" class="form-label">Value</label>
                                <label id="value" name="value" class="form-control form-control-lg"></label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="description" class="form-label">Description</label>
                                <label id="description" name="description" class="form-control form-control-lg wrap-content"></label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="note" class="form-label">Note</label>
                                <label id="note" name="note" class="form-control form-control-lg wrap-content"></label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-bs-dismiss="modal" id="submit-information-service-config" class="btn btn-primary">OK</button>
                </div>
            </div>
        </form>
    </div>
</div>


<!--Toast-->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 111111111;">
    <div id="myToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="alert mb-0 ">
            <i class="bi bi-exclamation-triangle"></i>
            <span id="toast-content"></span>
        </div>
    </div>
</div>

@section Footer{
    <script src="~/assets/extensions/toastify-js/src/toastify.js"></script>
    <script src="~/assets/extensions/jquery/jquery.min.js"></script>
    <script src="~/assets/extensions/datatables/datatables.min.js"></script>

    <script src="~/assets/extensions/datatables/dataTables.select.min.js"></script>
    <script src="~/assets/extensions/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/assets/js/pages/service-configs.js"></script>
  
}