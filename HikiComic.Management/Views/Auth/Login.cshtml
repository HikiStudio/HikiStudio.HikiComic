@using HikiComic.ViewModels.Users.UserDataRequest

@model UserLoginRequest

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - HikiComic</title>
    <link rel="stylesheet" href="~/assets/css/main/app.css" />
    <link rel="icon" href="~/hikicomic-logo.ico" type="image/x-icon" />
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/extensions/sweetalert2/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/assets/css/pages/auth.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
</head>

<body style="background: #1e3799;">
    <div class="loading-overlay">
        <div class="loading-icon">
            <img src="~/assets/images/loading_v2.gif" alt="Loading" />
        </div>
    </div>

    <div id="auth">
        <div class="container d-flex h-100" style="justify-content: center; align-items: center;">
            <div class="card-login">
                <div style="margin: 25px 40px 40px 40px;">
                    <div class="auth-title">
                        <h1 style="text-align: center;">Login</h1>
                    </div>

                    <section>
                        <form id="login">
                            <div class="form-group position-relative has-icon-left">
                                <input asp-for="Email" class="form-control"
                                       placeholder="Email" name="email" id="email" autocomplete="off" style="border-color: #b1abab;" />
                                <div class="form-control-icon">
                                    <i class="bi bi-envelope"></i>
                                </div>
                            </div>
                            <div class="form-group position-relative has-icon-left">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password" name="password" id="password" 
                                    autocomplete="off" style="border-color: #b1abab;" />
                                <i class="fa-solid fa-eye-slash" id="eye"></i>
                                <div class="form-control-icon">
                                    <i class="fa-solid fa-key"></i>
                                </div>
                            </div>
                            <div class="form-check d-flex">
                                <input asp-for="RememberMe" class="form-check-input me-2" type="checkbox" name="remember-me" style="margin-top: 0px;" id="remember-me" />
                                <label class="form-check-label text-gray-600" for="remember-me">
                                    Remember me
                                </label>
                            </div>
                            <div>
                                <button id="login-submit" type="submit" autofocus class="btn btn-primary btn-block shadow-lg mt-4">
                                    Login
                                </button>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>

    <script src="~/assets/js/bootstrap.js"></script>
    <script src="~/assets/extensions/jquery/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="~/assets/extensions/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/assets/js/pages/sign-in.js"></script>
</body>
</html>