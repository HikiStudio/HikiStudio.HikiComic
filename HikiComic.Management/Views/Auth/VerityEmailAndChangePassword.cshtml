@using HikiComic.ViewModels.Common;

@model ApiResult<bool>;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Verify Email And Change Password - HikiComic</title>
    <link rel="stylesheet" href="~/assets/css/main/app.css" />
    <link rel="icon" href="~/hikicomic-logo.ico" type="image/x-icon" />
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/extensions/sweetalert2/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/assets/css/pages/auth.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link href="~/assets/extensions/toastify-js/src/toastify.css" rel="stylesheet" />
</head>

<body style="background: #1e3799;">
    <div class="loading-overlay">
        <div class="loading-icon">
            <img src="~/assets/images/loading_v2.gif" alt="Loading" />
        </div>
    </div>

    <div id="auth">
        <div class="container d-flex h-100" style="justify-content: center; align-items: center;">
            <div class="card-login">
                <div style="margin: 25px 40px 40px 40px;">

                    @if (Model.IsSuccessed)
                    {
                        <div class="auth-title">
                            <h1 style="text-align: center;">Change Password</h1>
                        </div>

                        <section>
                            <form id="login">
                                <div class="form-group position-relative has-icon-left">
                                    <input type="password" class="form-control" placeholder="New Password" name="password" id="password"
                                           autocomplete="off"/>
                                    <i class="fa-solid fa-eye-slash" id="eye"></i>
                                    <div class="form-control-icon">
                                        <i class="fa-solid fa-key"></i>
                                    </div>
                                </div>

                                <div class="form-group position-relative has-icon-left">
                                    <input type="password" class="form-control" placeholder="Confirm Password" name="confirm-password" id="confirm-password"
                                           autocomplete="off"/>
                                    <i class="fa-solid fa-eye-slash" id="eyeConfirmPassword"></i>
                                    <div class="form-control-icon">
                                        <i class="fa-solid fa-key"></i>
                                    </div>
                                </div>

                                <div>
                                    <button id="login-submit" type="submit" class="btn btn-primary btn-block shadow-lg mt-4">
                                        Change
                                    </button>
                                </div>
                            </form>
                        </section>
                    }
                    else
                    {
                        <div class="d-flex" style="align-items: center;">
                            <div style="flex: 1; text-align: center;">
                                <img style="width: 60px; height:auto;" src="~/assets/images/icons/2022_02_01_warning_sign.jpg" />
                            </div>

                            <div style="flex: 6; padding-left: 5px;">
                                <p style="word-break: break-all;"><strong>@Model.Message</strong></p>
                            </div>
                        </div>
                    }

                    <div style="padding-top: 15px; text-align: right;">
                        <a asp-action="Login" asp-controller="Auth">Sign In</a>
                        <div style="display: inline; width: 10px; text-align: center;">|</div>
                        <a href="https://www.hiki.space" target="_blank">Need Help?</a>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!--Toast-->
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 111111111;">
        <div id="myToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="alert mb-0 ">
                <i class="bi bi-exclamation-triangle"></i>
                <span id="toast-content"></span>
            </div>
        </div>
    </div>

    <script src="~/assets/js/bootstrap.js"></script>
    <script src="~/assets/extensions/jquery/jquery.min.js"></script>
    <script src="~/assets/extensions/toastify-js/src/toastify.js"></script>
    <script src="~/assets/js/common.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="~/assets/extensions/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/assets/js/pages/verify-email-and-change-password.js"></script>
</body>
</html>